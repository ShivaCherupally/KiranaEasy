<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kiranam.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.kiranam.android.ApplicationController"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">


        <activity
            android:name=".ui.Splashscreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.kiranam.android.ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.kiranam.android.ui.signup.Signup"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ForgotPassword"
            android:label="@string/forgot_password_label" />
        <activity
            android:name=".BulkDataActivity"
            android:parentActivityName=".Home" />
        <activity
            android:name=".StudentListActivity"
            android:parentActivityName=".ui.Home" />
        <activity
            android:name=".ElectricMeterReaderActivity"
            android:parentActivityName=".Home" />

        <activity
            android:name=".ui.OtpActivity"
            android:parentActivityName="com.kiranam.android.ui.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".bottommenu.BottomMenuActivity"
            android:parentActivityName="com.kiranam.android.ui.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>