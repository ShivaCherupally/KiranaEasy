<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/middlelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/loading"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorAccent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/headertitle"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:src="@drawable/profileimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/firstname"
                android:textColor="@color/lite_black"
                android:textSize="@dimen/_12sdp" />


            <EditText
                android:id="@+id/fullnameet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_less"
                android:backgroundTint="@color/gray"
                android:clickable="false"
                android:focusable="false"
                android:imeOptions="actionNext"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/lite_black"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/lastname"
                android:textColor="@color/lite_black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_bg"
                android:hint="@string/lastname"
                android:imeOptions="actionNext"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/mobile"
                android:textColor="@color/lite_black"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:id="@+id/Linear_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_less"
                android:backgroundTint="@color/gray">

                <com.goodeggs.android.fontstyles.TextViewSemiBold
                    android:id="@+id/countryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="IN +91"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:background="@color/textHintColorNewDesign" />

                <EditText
                    android:id="@+id/mobileet"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:background="@color/transperent"
                    android:clickable="false"
                    android:digits="0123456789"

                    android:focusable="false"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/lite_black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/password"
                android:textColor="@color/lite_black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/passwordet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_bg"
                android:hint="@string/password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_1sdp"
                android:padding="@dimen/_3sdp"
                android:text="Password should be at least 6 characters"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/emailid"
                android:textColor="@color/lite_black"
                android:textSize="@dimen/_12sdp" />


            <EditText
                android:id="@+id/emailidet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_less"
                android:backgroundTint="@color/gray"
                android:clickable="false"
                android:focusable="false"
                android:imeOptions="actionNext"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/lite_black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/city"
                android:textColor="@color/lite_black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/cityEt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_less"
                android:clickable="false"
                android:focusable="false"
                android:imeOptions="actionNext"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/lite_black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />


            <Button
                android:id="@+id/rigesterBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/button_bg"
                android:text="@string/register"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:visibility="gone" />


        </LinearLayout>


    </LinearLayout>


</layout>